<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.kuwon.stugether.problemBank.problem.repository.ProblemRepository">
	<select id="selectProblemList" parameterType="map">
		SELECT
			`id`
			, `userId`
			, `title`
			, `content`
			, `imagePath`
			, `answer`
			, `choice`
			, `solution`
			, `createdAt`
			, `updatedAt`
		FROM
			`problem`
		WHERE
			`userId` = #{userId}
		ORDER BY
			`id` DESC
		LIMIT 10 OFFSET #{page};
	</select>
	<select id="selectProblemCount" parameterType="int">
		SELECT
			count(*)
		FROM
			`problem`
		WHERE
			`userId` = #{userId};
	</select>
	<select id="selectProblemById" parameterType="int"
	resultType="com.kuwon.stugether.problemBank.problem.domain.Problem">
		SELECT
			`id`
			, `userId`
			, `title`
			, `content`
			, `imagePath`
			, `answer`
			, `choice`
			, `solution`
			, `createdAt`
			, `updatedAt`
		FROM
			`problem`
		WHERE
			`id` = #{problemId};
	</select>
	<insert id="insertProblem" parameterType="map"
	useGeneratedKeys="true" keyProperty="id">
		INSERT INTO
			`problem`
		(
			`userId`
			, `title`
			, `content`
			, `imagePath`
			, `answer`
			, `choice`
			, `solution`
		)
		VALUE
		(
			#{userId}
			, #{title}
			, #{content}
			, #{imagePath}
			, #{answer}
			, #{choice}
			, #{solution}
		);
	</insert>
	<delete id="deleteProblem" parameterType="int">
		DELETE FROM
			`problem`
		WHERE
			`id` = #{problemId};
	</delete>
</mapper>