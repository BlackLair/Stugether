<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.kuwon.stugether.group.category.repository.GroupCategoryRepository">
	<insert id="insertCategory" parameterType="map">
		INSERT INTO
			`group_category`
		(
			`groupId`
			, `name`
		)
		VALUE
		(
			#{groupId}
			, #{name}
		);
	</insert>
	<select id="selectCategoryByGroupId" parameterType="int"
	resultType="com.kuwon.stugether.group.category.domain.GroupCategory">
		SELECT
			`id`
			, `groupId`
			, `name`
			, `createdAt`
			, `updatedAt`
		FROM
			`group_category`
		WHERE
			`groupId` = #{groupId};
	</select>
	<select id="selectCategoryById" parameterType="int"
	resultType="com.kuwon.stugether.group.category.domain.GroupCategory">
		SELECT
			`id`
			, `groupId`
			, `name`
			, `createdAt`
			, `updatedAt`
		FROM
			`group_category`
		WHERE
			`id` = #{categoryId};
	</select>
	<select id="selectExistCategory" parameterType="map"
	resultType="int">
		SELECT EXISTS(
			SELECT
				`id`
			FROM
				`group_category`
			WHERE
				`groupId` = #{groupId}
			AND `name` = #{name}
		);
	</select>
	<delete id="deleteCategory" parameterType="int">
		DELETE FROM
			`group_category`
		WHERE
			`id` = #{categoryId};
	</delete>
</mapper>