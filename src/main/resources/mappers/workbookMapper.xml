<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  

<mapper namespace="com.kuwon.stugether.problemBank.workbook.repository.WorkbookRepository">
	<select id="selectWorkbookList" parameterType="map"
	resultType="com.kuwon.stugether.problemBank.workbook.domain.Workbook">
		SELECT
			`id`
			, `userId`
			, `title`
			, `createdAt`
			, `updatedAt`
		FROM 
			`workbook`
		WHERE
			`userId` = #{userId}
		ORDER BY
			`id` DESC
		LIMIT 10 OFFSET #{page};
	</select>
	<select id="selectProblemCountByWorkBookId" parameterType="int"
	resultType="int">
		SELECT
			count(*)
		FROM
			`workbook_problem_list`
		WHERE
			`workbookId` = #{workbookId};
	</select>
	<select id="selectScore" parameterType="int"
	resultType="Integer">
		SELECT
			`score`
		FROM
			`workbook_score`
		WHERE
			`userId` = #{userId}
		AND `workbookId` = #{workbookId};
	</select>
</mapper>